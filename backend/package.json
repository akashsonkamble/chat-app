{
	"name": "chat-fusion-backend",
	"version": "1.0.0",
	"description": "A real-time chat application built using the MERN stack (MongoDB, Express, React, Node.js) with TypeScript.",
	"main": "dist/index.js",
	"scripts": {
		"build": "webpack --config webpack.prod.js",
		"build:watch": "webpack --config webpack.dev.js",
		"dev": "concurrently --kill-others \"npm run build:watch\" \"npm run start:dev\"",
		"start:dev": "webpack-dev-server --config webpack.dev.js",
		"start:prod": "node dist/index.js"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/akashsonkamble/chat-app.git"
	},
	"keywords": [
		"chat",
		"chat-application",
		"messaging",
		"real-time",
		"web-app",
		"nodejs",
		"socket.io",
		"typescript",
		"mongodb",
		"mongoose",
		"express",
		"cloudinary"
	],
	"author": "Akash Sonkamble",
	"license": "ISC",
	"devDependencies": {
		"@types/express": "^4.17.21",
		"@types/node": "^20.14.11",
		"nodemon": "^3.1.4",
		"ts-loader": "^9.5.1",
		"typescript": "^5.5.3",
		"webpack": "^5.93.0",
		"webpack-cli": "^5.1.4",
		"webpack-node-externals": "^3.0.0"
	},
	"dependencies": {
		"dotenv": "^16.4.5",
		"express": "^4.19.2"
	}
}
