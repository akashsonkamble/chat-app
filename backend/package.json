{
    "name": "chat-fusion-backend",
    "version": "1.0.0",
    "description": "A real-time chat application built using the MERN stack (MongoDB, Express, React, Node.js) with TypeScript.",
    "main": "dist/index.js",
    "scripts": {
        "build": "webpack --config webpack.prod.js",
        "build:watch": "webpack --config webpack.dev.js",
        "dev": "concurrently --kill-others \"npm run build:watch\" \"npm run start:dev\"",
        "start:dev": "nodemon dist/index.js",
        "start:prod": "node dist/index.js",
        "prettier": "prettier --write ."
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/akashsonkamble/chat-app.git"
    },
    "keywords": [
        "chat",
        "chat-application",
        "messaging",
        "real-time",
        "web-app",
        "nodejs",
        "socket.io",
        "typescript",
        "mongodb",
        "mongoose",
        "express",
        "cloudinary"
    ],
    "author": "Akash Sonkamble",
    "license": "ISC",
    "devDependencies": {
        "@types/bcryptjs": "^2.4.6",
        "@types/cookie-parser": "^1.4.7",
        "@types/cors": "^2.8.17",
        "@types/express": "^4.17.21",
        "@types/jsonwebtoken": "^9.0.6",
        "@types/multer": "^1.4.11",
        "@types/node": "^20.14.11",
        "@types/uuid": "^10.0.0",
        "concurrently": "^8.2.2",
        "nodemon": "^3.1.4",
        "prettier": "^3.3.3",
        "ts-loader": "^9.5.1",
        "typescript": "^5.5.3",
        "webpack": "^5.93.0",
        "webpack-cli": "^5.1.4",
        "webpack-dev-server": "^5.0.4",
        "webpack-node-externals": "^3.0.0"
    },
    "dependencies": {
        "bcryptjs": "^2.4.3",
        "cloudinary": "^2.3.0",
        "cookie-parser": "^1.4.6",
        "cors": "^2.8.5",
        "dotenv": "^16.4.5",
        "express": "^4.19.2",
        "jsonwebtoken": "^9.0.2",
        "mongoose": "^8.5.1",
        "multer": "^1.4.5-lts.1",
        "socket.io": "^4.7.5",
        "uuid": "^10.0.0",
        "winston": "^3.13.1"
    }
}
